<link rel="stylesheet" href="{{ 'cs-cart-drawer.css' | asset_url }}">

<div class="cart-overlay js-cart-overlay"></div>
<div class="cart-drawer js-cart-drawer">
    <div class="cart-drawer__header">
        {%- assign collection = settings.drawer-collection -%}
        {%- assign collection_image = collection.featured_image -%}
        {%- assign tagline = settings.drawer-collection-tagline -%}
        {%- assign threshold = settings.drawer-free-shipping -%}
        <button class="cart-drawer__close-btn js-close-cart-drawer">✕</button>
        <h3>Your Cart</h3>
        <div class="cart-icon-image">
            <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd"
                    d="M8.7351 14.0181C8.91085 13.6985 9.24662 13.5 9.61132 13.5H16.47C17.22 13.5 17.88 13.09 18.22 12.47L21.6008 6.33041C21.7106 6.13097 21.7448 5.91025 21.7129 5.70131C21.8904 5.52082 22 5.27321 22 5C22 4.44772 21.5523 4 21 4H6C5.96703 4 5.93443 4.0016 5.90228 4.00471L5.7317 3.64435C5.40095 2.94557 4.69708 2.5 3.92398 2.5H2.92004C2.36776 2.5 1.92004 2.94772 1.92004 3.5C1.92004 4.05228 2.36776 4.5 2.92004 4.5H3.14518C3.6184 4.5 4.04931 4.77254 4.25211 5.20011L7.08022 11.1627C7.35632 11.7448 7.33509 12.4243 7.02318 12.988L6.17004 14.53C5.44004 15.87 6.40004 17.5 7.92004 17.5H18.92C19.4723 17.5 19.92 17.0523 19.92 16.5C19.92 15.9477 19.4723 15.5 18.92 15.5H9.61131C8.85071 15.5 8.36855 14.6845 8.7351 14.0181ZM17.0408 10.4677L19.5108 6H6.84671L8.90839 10.3557C9.23914 11.0544 9.94301 11.5 10.7161 11.5H15.2905C16.0183 11.5 16.6886 11.1046 17.0408 10.4677Z"
                    fill="#000000" />
                <path
                    d="M7.92005 18.5C6.82005 18.5 5.93005 19.4 5.93005 20.5C5.93005 21.6 6.82005 22.5 7.92005 22.5C9.02005 22.5 9.92005 21.6 9.92005 20.5C9.92005 19.4 9.02005 18.5 7.92005 18.5Z"
                    fill="#000000" />
                <path
                    d="M17.9201 18.5C16.8201 18.5 15.9301 19.4 15.9301 20.5C15.9301 21.6 16.8201 22.5 17.9201 22.5C19.0201 22.5 19.9201 21.6 19.9201 20.5C19.9201 19.4 19.0201 18.5 17.9201 18.5Z"
                    fill="#000000" />
            </svg>
            <span class="cart-counter">{{cart.item_count}}</span>
        </div>
    </div>
    <div class="cart-drawer__content">
        <div class="top-collection-wrap">
            <a href="{{collection.url}}">
                <div class="collection-wrap hover-transition" style="background-image: url({{collection_image |  img_url: 'master'}});">
                    <h5>{{collection.title}}</h5>
                    <h3>{{tagline}}</h3>
                </div>
            </a>
        </div>
        <div class="drawer-free-shipping-section mt-2">
            <div class="drawer-free-shipping-wrap">
                <svg fill="#000000" width="48px" height="48px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M1,12.5v5a1,1,0,0,0,1,1H3a3,3,0,0,0,6,0h6a3,3,0,0,0,6,0h1a1,1,0,0,0,1-1V5.5a3,3,0,0,0-3-3H11a3,3,0,0,0-3,3v2H6A3,3,0,0,0,3.6,8.7L1.2,11.9a.61.61,0,0,0-.07.14l-.06.11A1,1,0,0,0,1,12.5Zm16,6a1,1,0,1,1,1,1A1,1,0,0,1,17,18.5Zm-7-13a1,1,0,0,1,1-1h9a1,1,0,0,1,1,1v11h-.78a3,3,0,0,0-4.44,0H10Zm-2,6H4L5.2,9.9A1,1,0,0,1,6,9.5H8Zm-3,7a1,1,0,1,1,1,1A1,1,0,0,1,5,18.5Zm-2-5H8v2.78a3,3,0,0,0-4.22.22H3Z" />
                </svg>
                <h5>
                    Get free shipping with <span></span>more
                </h5>
            </div>
            <div class="free-shipping-bar-wrap" data-threshold={{threshold}}>
                <div class="free-shipping-bar">
                </div>
            </div>
        </div>
        <div class="drawer-line-items-wrap">
            {% for item in cart.items %}
                <div class="line-item shadow-1" data-id="{{ item.id }}">
                    <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.title }}" class="line-item__image">
                    <div class="line-item__details">
                        <h4 class="line-item__title">{{ item.title }}</h4>
                        <p class="line-item__variant">Color: <span class="line-item__variant-option">{{ item.variant.title }}</span></p>
                        {% comment %} {% if item.quantity <= 5 %}
                        <p class="line-item__stock-warning">Only <span class="line-item__stock-quantity">{{ item.quantity }}</span> left in stock!</p>
                        {% endif %} {% endcomment %}
                        <div class="priceNquantity">
                            <p class="line-item__price">{{ item.final_price | money }}</p>
                            <div class="line-item__quantity">
                                <button class="line-item__quantity-decrease">−</button>
                                <span class="line-item__quantity-value">{{ item.quantity }}</span>
                                <button class="line-item__quantity-increase">+</button>
                            </div>
                        </div>
                    </div>
                    <button class="line-item__remove">✕</button>
                </div>
                {% endfor %}
        </div>
        <div class="subtotal-cart">
            <h5>Subtotal</h5>
            <h5 class="subtotal-text">{{cart.items_subtotal_price | money }}</h5>
        </div>
        <div class="cart-note">
            Taxes and shipping calculated at checkout
        </div>
    </div>
    <div class="cart-drawer__footer">
        <div class="checkout-btn">
            <a class="global-btn" href="/checkout">Check out | <span id="cart-amount">{{cart.items_subtotal_price | money }}</span></a>
        </div>
    </div>
    <div class="empty-cart-message" style="display: none;">
        <img src="{{ 'empty-cart.png' | asset_url }}" alt="Empty Cart Icon" class="empty-cart-image">
        <h2>Your cart is empty</h2>
        <p>Looks like you haven't added anything to your cart yet</p>
        <a href="/" class="global-btn">Continue shopping</a>
</div>
</div>

 
<script src="{{ 'cs-cart-drawer.js' | asset_url }}" defer="defer"></script>