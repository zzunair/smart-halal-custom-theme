<link rel="stylesheet" href="{{ 'featured.css' | asset_url }}">

<div class="featured-wrap" style="background-color: {{ section.settings.background_color }};">
  <div class="custom-container">
    {%- for block in section.blocks -%}
    <div class="featured-item">
      <div class="featured-star">
        {% if block.settings.custom_icon != blank %}
          {{ block.settings.custom_icon }}
        {% else %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="#icon" style="fill: {{ section.settings.icon_color }}">
            <path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"></path>
          </svg>
        {% endif %}
      </div>
      <div class="featured-text">
        <h3 style="color: {{ section.settings.text_color }}">{{ block.settings.item-heading }}</h3>
        <p style="color: {{ section.settings.text_color }}">{{ block.settings.item-subheading }}</p>
      </div>
    </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Cs Featured",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#8f1a37"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#FFD700"
    }
  ],
  "blocks": [{
    "type": "heading",
    "name": "Featured Items",
    "limit": 3,
    "settings": [
      {
        "type": "text",
        "id": "item-heading",
        "label": "Items heading",
        "default": "Featured"
      },
      {
        "type": "text",
        "id": "item-subheading",
        "label": "Item SubHeading",
        "default": "Featured Text"
      },
      {
        "type": "html",
        "id": "custom_icon",
        "label": "Custom Icon"
      }
    ]
  }],
  "presets": [
    {
      "name": "Cs Featured",
      "settings": {
      }
    }
  ]
}
{% endschema %}