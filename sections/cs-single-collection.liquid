<link rel="stylesheet" href="{{ 'cs-single-collection.css' | asset_url }}">
<section class="unique__collection__div">
    <div class="seclected__collection__div">
        {% assign collection = collections[section.settings.selected_collection] %}

        {% if collection %}
            {% assign first_product = collection.products.first %}
            <div class="selected__collection__wrap">
                {% if collection.image != blank %}
                    <img src="{{ collection.image.src | img_url: 'large' }}" alt="{{ collection.title }} Image" />
                    {%- else -%}
                    <img src="{{ first_product.featured_image.src | img_url: 'large' }}" alt="{{ first_product.title }} Image" />
                {% endif %}
            </div>

        <div class="seclected__collection__details__div">
            <div class="seclected__collection__details">
                {% assign first_product = collection.products.first %}
                {% if first_product %}
                <img src="{{ first_product.featured_image.src | img_url: 'large' }}" alt="{{ first_product.title }}" />
                {% endif %}
                <h2>{{ collection.title }}</h2>
                {%- if collection.description != blank -%}
                    <p>{{ collection.description }}</p>
                {%- else -%}
                    <p>{{ section.settings.section_text }}</p>
                {%- endif -%}
                <div class="seclected__collection__btn mt-2">
                    <a href="{{ section.settings.button_link }}">
                        <button>{{ section.settings.button_text }}</button>
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</section>


{% schema %}
    {
      "name": "Cs Single Collection",
      "settings": [
        {
          "type": "collection",
          "id": "selected_collection",
          "label": "Select Collection"
        },
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title"
        },
        {
          "type": "textarea",
          "id": "section_text",
          "label": "Section Description"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        }
      ],
      "presets": [
        {
          "name": "Cs Single Collection"
        }
      ]
    }
    {% endschema %}