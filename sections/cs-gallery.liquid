
<link rel="stylesheet" href="{{ 'cs-gallery.css' | asset_url }}">

<section>
    <div class="cs-gallery-wrapper">
        <div class="custom-container">
            <div class="cards-wrap">
                {%- for block in section.blocks -%}
                    <div class="gallery-card" style="background-image: url({{block.settings.g-image | img_url: 'master'}});">
                        <div class="gallery-card-overlay"></div>
                        <div class="gallery-card-content">
                            <div class="heading">
                                <h2>{{block.settings.g-heading}}</h2>
                            </div>
                            <div class="description">
                                <p>{{block.settings.g-description}}</p>
                            </div>
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "cs Gallery",
    "settings": [
      
    ],
    "blocks": [{
      "type": "Images",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "g-image",
          "label": "Gallery Image"
        },
        {
          "type": "text",
          "id": "g-heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "g-description",
          "label": "Description"
        }
      ]
    }],
    "presets": [
      {
        "name": "cs Gallery",
        "settings": {

        }
      }
    ]
  }
{% endschema %}